<h1>Listing advertises</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Status</th>
      <th>Color1</th>
      <th>Color2</th>
      <th>Race</th>
      <th>Street1</th>
      <th>Street2</th>
      <th>Name</th>
      <th>Size</th>
      <th>When</th>
      <th>Gender</th>
      <th>Age</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @advertises.each do |advertise| %>
      <tr>
        <td><%= advertise.title %></td>
        <td><%= advertise.description %></td>
        <td><%= advertise.status %></td>
        <td><%= advertise.color1 %></td>
        <td><%= advertise.color2 %></td>
        <td><%= advertise.race %></td>
        <td><%= advertise.street1 %></td>
        <td><%= advertise.street2 %></td>
        <td><%= advertise.name %></td>
        <td><%= advertise.size %></td>
        <td><%= advertise.when %></td>
        <td><%= advertise.gender %></td>
        <td><%= advertise.age %></td>
        <td><%= link_to 'Show', advertise %></td>
        <td><%= link_to 'Edit', edit_advertise_path(advertise) %></td>
        <td><%= link_to 'Destroy', advertise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Advertise', new_advertise_path %>
