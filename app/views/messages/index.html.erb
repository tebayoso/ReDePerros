<h1>Listing messages</h1>

<table>
  <thead>
    <tr>
      <th>Sender</th>
      <th>Text</th>
      <th>Readed</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.sender_id %></td>
        <td><%= message.text %></td>
        <td><%= message.readed %></td>
        <td><%= link_to 'Destroy', user_message_path(current_user, message), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
