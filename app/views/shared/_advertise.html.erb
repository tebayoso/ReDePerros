<div class="col-sm-3 col-md-3 col-lg-3">
  <div class="thumbnail">
    <%= image_tag advertise.image.url, class: "img-responsive" %>
    <div class="caption">
      <p><%= advertise.race %></p>
      <p><%= advertise.comments %></p>
      <%= advertise.name if advertise.name %>
      <p><%= advertise.street1 %> con <%= advertise.street2 %></p>
      <p><%= advertise.color1 %><%= " y #{advertise.color2}" %></p>
      <p><%= advertise.when.strftime("Dia: %m/%d/%Y Hora: %I:%M%p") %></p>
      <p>Tama√±o: <%= advertise.size %></p>
      <p>Edad(aprox): <%= advertise.age == 0 ? "Cachorro" : advertise.age %></p>
      <p>
        <a href="#" class="btn btn-default" role="button">Facebook</a> 
        <a href="#" class="btn btn-default" role="button">Twitter</a>
        <a href="#" class="btn btn-default" role="button">Email</a>
      </p>
      <p><a href="#" class="btn btn-danger" role="button">Enviar Mensaje al anunciante</a></p>
    </div>
  </div>
</div>
